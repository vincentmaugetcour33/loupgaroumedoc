{% extends "VMBlogBundle::base.html.twig" %}

{% block vmblog_body %}

 {% if images is not empty %}
    
 {# Tableau general des images #}
<table id="" class="table table-striped">
        <caption>GALERIE</caption>
        <tbody>
        <tr>
    {% for key, image in images %}
        <td><img style="cursor: pointer;border: 2px solid {{ cycle(['blue','green'],loop.index0)}}" class="" id="{{ image.description }}" src="{{ asset('bundles/vmblog/images/'~image.url) }}" rel="popover" alt="{{ image.alt}}" title="{{ image.alt}}" /></td>
        {# le tableau comporte 4 colonnes #}
        {% if loop.index % 6 == 0 %}</tr><tr>{% endif %}    
    {% endfor %}
    </tbody></table>
{% else %}
Il n'y a aucune image dans la galerie
{% endif %}

<script language="javascript" type="text/javascript">
 $(document).ready(function() 
 {
   
   $("ul.nav > li#galleries").addClass('active');
   $("img").popover({placement:'left',trigger: 'hover',html:true, content: function() { return '<img class="img-rounded" width="250px;" src="'+$(this).attr('src')+'"/><div>'+$(this).attr('id')+'</div>'; }, delay: { show: 500, hide: 10} });
 });
</script>


{% endblock %}                
