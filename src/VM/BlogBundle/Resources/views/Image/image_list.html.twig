{% extends "VMBlogBundle::base.html.twig" %}

{% block vmblog_body %}
 
 {% if images is not empty %}
    <table id="" class="">
        <caption>GALLERIE</caption>
        <tbody>
        <tr>
    {% for key, image in images %}
        <td><img style="cursor: pointer;" class="" id="{{ image.description }}" src="{{ asset('bundles/vmblog/images/'~image.url) }}" rel="popover" alt="{{ image.alt}}" title="{{ image.alt}}" /></td>
        {# le tableau comporte 4 colonnes #}
        {% if loop.index % 6 == 0 %}</tr><tr>{% endif %}    
    {% endfor %}
    </tbody></table>
{% endif %}

<script language="javascript" type="text/javascript">
 $(document).ready(function() 
 {
    $("img").popover({trigger: 'hover',html:true, content: function() { return '<img class="img-rounded" width="250px;" src="'+$(this).attr('src')+'"/><div>'+$(this).attr('id')+'</div>'; }, delay: { show: 500, hide: 10} });
 });//$.data(document.body, 'popup',1);
</script>


{% endblock %}                
